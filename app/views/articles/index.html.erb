<% content_for :title do %>
  MCraft｜募集中のサーバー
<% end %>
<head>
  <style>
      .header {
          background: #a29bfe;
          text-align: center;
      }
      .card {
          min-width: 220px;
          max-width: 270px;
          margin-bottom: 10px !important;
          margin: auto;
      }
      .sidebar {
          min-height: 500px;
      }
  </style>
</head>
<div class="container">
  <div class="row margin-top-bottom-pro">
    <% @article.each do |article| %>
      <div class="col-md-3 margin-top-Sper article-block padding-top-15">
        <div class="card" style="width: 18rem;">
          <% if article.image? %>
            <%= image_tag article.image.to_s, style: "width: 400px;height: 180px;object-fit: cover;", class: "img-fluid" %>
          <% else %>
            <%= image_tag "default.png", style: "width: 400px;height: 180px;object-fit: cover;" , class: "img-fluid" %>
          <% end %>
            <div class="card-body">
              <h5 class="card-title"><%= article.title %></h5>
              <p class="card-text">募集開始日: <%= article.created_at.strftime("%Y年%-m月%-d日") %></p>
              <p class="card-text">いいね数: 0</p>
              <%= link_to "詳細", article, class: "btn btn-primary" %>
            </div>
        </div>
      </div>
    <% end %>
  </div>
</div>