<% content_for :title do %>
  MCraft｜アカウントを作成する
<% end %>
<div class="container">
  <h2 class="text-center" style="margin-top: 20px">アカウントを作成する</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :"ユーザー名(公開されます)", style: "margin: 15px 0px 5px" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control"%>
    </div>

    <div class="field">
      <%= f.label :"メールアドレス", style: "margin: 15px 0px 5px" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード", style: "margin: 15px 0px 5px" %>
      <% if @minimum_password_length %>
      (<%= @minimum_password_length %>文字以上)
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control"%>
    </div>

    <div class="field">
      <%= f.label :"パスワードを再入力", style: "margin: 15px 0px 5px" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    </div>

    <div class="actions">
      <%= f.submit "アカウントを作成する", style: "margin: 30px 0px", class: "btn btn-primary w-100" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
