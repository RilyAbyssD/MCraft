<% content_for :title do %>
  MCraft｜ログイン
<% end %>
<div class="container">
  <h2 class="text-center" style="margin-top: 20px">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="field">
      <%= f.label :"ユーザー名", style: "margin: 15px 0px 5px" %><br />
      <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :"メールアドレス", style: "margin: 15px 0px 5px" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
    </div>

    <div class="field">
      <%= f.label :"パスワード", style: "margin: 15px 0px 5px" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :"アカウント情報を保存しますか？", style: "margin: 15px 0px 5px" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", style: "margin: 15px 0px 5px", class: "btn btn-primary w-100" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>