  <body>

<!--    <p class="notice"><%#= notice %></p>-->
<!--    <p class="alert"><%#= alert %></p>-->

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <a class="navbar-brand" href="/" style="margin-left: 15px">- MCraft -</a>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/">ホーム</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/articles">スタッフを募集しているサーバー</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/">協力したい人 依頼募集中の人</a>
          </li>
        </ul>
      </div>
      <div class="d-flex flex-row-reverse bd-highlight">
        <% if user_signed_in? %>
          <p class="navbar-text navbar-right phone-size" style="margin: 18px"><%= link_to "ログアウト", destroy_user_session_path %></p>
          <p class="navbar-text navbar-right phone-size" style="margin: 18px"><%= link_to "スタッフを募集する", new_article_path %></p>
        <% else %>
          <p class="navbar-text navbar-right phone-size" style="margin: 18px"><%= link_to "ユーザー登録", new_user_registration_path %></p>
          <p class="navbar-text navbar-right phone-size" style="margin: 18px"><%= link_to "ログイン", new_user_session_path %></p>
      <% end %>
      </div>
    </nav>

    <%= yield %>

    <footer class="text-center text-lg-start bg-light text-muted" style="padding: 0px">
      <section class="d-flex justify-content-center justify-content-lg-between p-4 border-bottom">
        <div>
        </div>
      </section>
      <section class="">
        <div class="container">
          <h1 class="fw-bold" style="margin-top: 16px">MCraft</h1>
          <%= link_to "プライバシーポリシー", "/homes/privacy", style: "color: gray;text-decoration: none"%><br>
          <%= link_to "利用規約", "/homes/userule", style: "color: gray;text-decoration: none" %><br>
          <%= link_to "お問い合わせ (TwitterのDMまで)", "https://twitter.com/Mineck100", style: "color: gray;text-decoration: none" %>
        </div>
